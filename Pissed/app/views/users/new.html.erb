<div class="jumbotron">
  <div class="text-center">
    <h2>Registration</h2>
  </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="row">
    <div class="col-md-6 px-0">

  <div class="field text-black-50">
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </div>

  <div class="field text-black-50">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  <div class="form-group">
    <label for="user_type" class="col-sm-3 control-label upperlabel">User Type: </label>
      <%= form.select :user_type, %w{User Admin Superadmin}, :prompt => 'Select', required: true, placeholder: 'user_type', class: 'form-control' %>
  </div>

  <div class="field text-black-50">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field text-black-50">
    <%= f.label :name %><br />
    <%= f.text_field :name %></div>

    <div class="field text-black-50">
      <%= f.label :lastname %><br />
      <%= f.text_field :lastname %></div>

      </div>

      <div class="col-md-6 px-0">
        <div class="field text-black-50">
          <%= f.label :city %><br />
          <%= f.text_field :city %></div>
        <div class="field text-black-50">
          <%= f.label :country %><br />
          <%= f.text_field :country %></div>
        <div class="field text-black-50">
          <%= f.label :bio %><br />
          <%= f.text_field :bio %></div>
        <div class="field text-black-50">
          <%= f.label :zone_id %><br />
          <%= f.text_field :zone_id %></div>
        <div class="field text-black-50">
          <%= f.label "Profile Photo" %><br/>
          <%= f.file_field :avatar %></div>

        </div>



  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
  </div>

<%= render "devise/shared/links" %>
