<p id="notice"><%= notice %></p>

<div class="jumbotron container justify-content-end text-black-50">
  <div class="text-center">
    <h2>Users</h2>
    <br>
  </div>
<table>
  <thead>
    <tr>
      <th>User type</th>
      <th>Name</th>
      <th>Lastname</th>
      <th>Email address</th>
      <th>In blacklist</th>
      <th>Suspended</th>
      <th>Previously suspension</th>
      <th>Zone</th>
      <th> Actions </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.user_type %></td>
        <td><%= user.name %></td>
        <td><%= user.lastname %></td>
        <td><%= user.email %></td>
        <td><%= user.in_blacklist %></td>
        <td><%= user.suspended %></td>
        <td><%= user.previously_suspension %></td>
        <td><%= user.zone.name %></td>
        <td><%= link_to 'Show', user %>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% if user.in_blacklist == true %>
        <td><%= link_to 'Recover from blacklist', blacklistout_user_path(user)%> </td>
        <% else %>
        <td><%= link_to 'To Blacklist', blacklist_user_path(user)%> </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New User', new_user_path %>
