  <%= form_with(model: user, local: true) do |form| %>
    <% if user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <!-- Desde aqui el formulario -->
        <br>
        <br>
        <div class="row">
          <div class="col-md-6 px-0">
            <div class="form-group">
              <label for="firstName" class="col-sm-3 control-label upperlabel">First Name:</label>
              <a class="col-sm-9">
                <a class="field">
                  <%= form.text_field :name %>
                </a>
              </a>
            </div>
            <div class="form-group">
              <label for="lastName" class="col-sm-3 control-label upperlabel">Last Name:</label>
              <a class="col-sm-9">
                <a class="field">
                  <%= form.text_field :lastname %>
                </a>
              </a>
            </div>

            <div class="form-group">
              <label for="Country" class="col-sm-3 control-label upperlabel">Country:</label>
              <a class="col-sm-9">
                <a class="field">
                  <%= form.text_field :country %>
                </a>
              </a>
            </div>
            <div class="form-group">
              <label for="City" class="col-sm-3 control-label upperlabel">City:</label>
              <a class="col-sm-9">
                <a class="field">
                  <%= form.text_field :city %>
                </a>
              </a>
            </div>
            <div class="form-group">
              <label for="user_type" class="col-sm-3 control-label upperlabel">User Type: </label>
                <%= form.select :user_type, %w{User Admin Superadmin}, :prompt => 'Select', required: true, placeholder: 'user_type', class: 'form-control' %>
            </div>

          </div>
          <div class="col-md-6 px-0">

            <div class="form-group">
              <label for="Biography" class="col-sm-3 control-label upperlabel">Biographys: </label>
              <a class="col-sm-9">
                <a class="field">
                  <%= form.text_field :bio %>
                </a>
              </a>
            </div>
            <div class="form-group">
              <label for="Profile Picture" class="col-sm-3 control-label upperlabel">Profile Picture: </label>
              <a class="col-sm-9">
                <img src="/appimages/noimagepost.jpeg" class="img-thumbnail" width="300" height="250">
                <a class="field">
                  <%= form.text_field :picture %>
                </a>
              </a>
              <a>
                <button type="submit" class="btn btn-primary btn-sm">Browse...</button>
              </a>
            </div>
            <div class="form-group">
              <label for="Zone_id" class="col-sm-3 control-label upperlabel">Zone_id*: </label>
              <a class="col-sm-9">
                <a class="field">
                  <%= form.text_field :zone_id %>
                </a>
              </a>
            </div>
          </div>
        </div>
        <div class="actions">
          <div class="text-center">
          <%= form.submit %>
          </div>
        </div>
        <% end %>
