<h1>Posts</h1>
<div class="jumbotron container justify-content-end text-black-50">
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Up vote amount</th>
      <th>Down vote amount</th>
      <th>Date</th>
      <th>Open</th>
      <th>Solved</th>
      <th>User</th>
      <th>Zone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if current_user.user_type == "Admin" || current_user.user_type == "Superadmin" %>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.up_vote_amount %></td>
        <td><%= post.down_vote_amount %></td>
        <td><%= post.date %></td>
        <td><%= post.open %></td>
        <td><%= post.solved %></td>
        <td><%= post.user.name %><%= post.user.lastname %></td>
        <td><%= post.zone.name %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= form :submit , name: "in_dumpster",value: true %></td>
      </tr>
    <% end %>
    <% else %>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.up_vote_amount %></td>
      <td><%= post.down_vote_amount %></td>
      <td><%= post.date %></td>
      <td><%= post.open %></td>
      <td><%= post.solved %></td>
      <td><%= post.user.name %><%= post.user.lastname %></td>
      <td><%= post.zone.name %></td>
      <td><%= link_to 'Show', user %></td>
    </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
</div>
