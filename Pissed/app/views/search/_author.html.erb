<p id="notice"><%= notice %></p>

<h1>Users</h1>
<div class="jumbotron container justify-content-end text-black-50">
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Lastname</th>
      <th>Email address</th>
      <th>In blacklist</th>
      <th>Suspended</th>
      <th>Previously suspension</th>
      <th>Zone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if current_user.user_type == "Admin" || current_user.user_type == "Superadmin" %>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.lastname %></td>
        <td><%= user.email %></td>
        <td><%= user.in_blacklist %></td>
        <td><%= user.suspended %></td>
        <td><%= user.previously_suspension %></td>
        <td><%= user.zone.name %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% else %>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.lastname %></td>
      <td><%= user.email %></td>
      <td><%= user.in_blacklist %></td>
      <td><%= user.suspended %></td>
      <td><%= user.previously_suspension %></td>
      <td><%= user.zone.name %></td>
      <td><%= link_to 'Show', user %></td>
    </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New User', new_user_path %>
