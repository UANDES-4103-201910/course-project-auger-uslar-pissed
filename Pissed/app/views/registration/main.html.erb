<h1>Registration</h1>

<div class="container">
  <form class="form-horizontal" role="form">
    <h2>Registration</h2>
    <br>
    <br>
    <div class="row">
      <div class="col-md-6 px-0">
        <div class="form-group">
          <label for="firstName" class="col-sm-3 control-label upperlabel">First Name:</label>
          <a class="col-sm-9">
            <input type="text" placeholder="First Name" class="normaltextbox" autofocus>
          </a>
        </div>
        <div class="form-group">
          <label for="lastName" class="col-sm-3 control-label upperlabel">Last Name:</label>
          <a class="col-sm-9">
            <input type="text" placeholder="Last Name" class="normaltextbox" autofocus>
          </a>
        </div>

        <div class="form-group">
          <label for="password" class="col-sm-3 control-label upperlabel">Password*:</label>
          <a class="col-sm-9">
            <input type="password" placeholder="Password" class="normaltextbox">
          </a>
        </div>
        <div class="form-group">
          <label for="password" class="col-sm-3 control-label upperlabel">Confirm Password*:</label>
          <a class="col-sm-9">
            <input type="password" placeholder="Password" class="normaltextbox">
          </a>
        </div>
        <div class="form-group">
          <label for="email" class="col-sm-3 control-label upperlabel">Email*: </label>
          <a class="col-sm-9">
            <input type="email" placeholder="Email" class="normaltextbox" name= "email">
          </a>
        </div>
        <div class="form-group">
          <label for="Country" class="col-sm-3 control-label upperlabel">Country*:</label>
          <a class="col-sm-9">
            <input type="text" placeholder="In which country do you live?" class="normaltextbox" name= "email">
          </a>
        </div>
        <div class="form-group">
          <label for="City" class="col-sm-3 control-label upperlabel">City*:</label>
          <a class="col-sm-9">
            <input type="text" placeholder="In which city do you live?" class="normaltextbox">
          </a>
        </div>

      </div>
      <div class="col-md-6 px-0">
        <div class="form-group">
          <label for="Nickname" class="col-sm-3 control-label upperlabel">Nickname*: </label>
          <a class="col-sm-9">
            <input type="text" placeholder="Create a nickname" class="normaltextbox">
          </a>
        </div>
        <div class="form-group">
          <label for="User description" class="col-sm-3 control-label upperlabel">User description*: </label>
          <a class="col-sm-9">
              <input type="text"  placeholder="Please write a brief description of yourself" class="descriptionbox">
          </a>
        </div>
        <div class="form-group">
          <label for="Profile Picture" class="col-sm-3 control-label upperlabel">Profile Picture: </label>
          <a class="col-sm-9">
            <input type="text"  placeholder="add a picture of yourself" class="normaltextbox">
          </a>
          <a>
            <button type="submit" class="btn btn-primary btn-sm">Browse...</button>
          </a>
        </div>
      </div>
    </div>
    <div class="align-bottom">
      <div class="text-center">
        <button type="submit"  class="btn btn-primary btn-lg upperlabel">Register</button>
      </div>
    </div>

  </form> <!-- /form -->
</div> <!-- ./container -->